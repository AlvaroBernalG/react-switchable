{
  "name": "react-switchable",
  "version": "0.4.7",
  "description": "A customizable react switch component",
  "main": "dist/index.js",
  "types": "./main.d.ts",
  "scripts": {
    "prepublish": "rm -rf dist/ && npm run build",
    "build:example": "babel src -d dist",
    "build": "env ENV=PROD webpack ",
    "examples:dev": "webpack-dev-server --mode development",
    "format": "prettier --write '**/*.{js,jsx,json}'",
    "lint": "eslint --ext .js,.jsx src/ examples/src",
    "test": "jest",
    "test:watch": "jest --watch",
    "analyze-bundle":
      "env ENV=PROD webpack -p --profile --json > stats.json && webpack-bundle-analyzer stats.json examples/dist -s gzip"
  },
  "pre-commit": ["format", "lint", "test"],
  "author": {
    "name": "Alvaro Bernal Gimeno",
    "website": "https://alvarobg.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/AlvaroBernalG/react-switchable"
  },
  "bugs": {
    "url": "https://github.com/gfazioli/react-switch/issues"
  },
  "license": "MIT",
  "peerDependencies": {
    "react": "^15.3.0 || ^16.0.0",
    "react-dom": "^15.3.0 || ^16.0.0"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-eslint": "^8.0.1",
    "babel-jest": "^23.0.1",
    "babel-loader": "^7.1.2",
    "babel-preset-env": "^1.7.0",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "css-loader": "^3.0.0",
    "enzyme": "^3.10.0",
    "enzyme-adapter-react-16": "^1.14.0",
    "enzyme-to-json": "^3.1.2",
    "eslint": "^4.8.0",
    "eslint-config-airbnb": "^16.0.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-import": "^2.18.0",
    "eslint-plugin-jsx-a11y": "^6.0.2",
    "eslint-plugin-react": "^7.4.0",
    "html-webpack-plugin": "^3.2.0",
    "jest": "^24.8.0",
    "mini-css-extract-plugin": "^0.4.0",
    "node-sass": "^4.12.0",
    "pre-commit": "^1.2.2",
    "prettier": "^1.9.2",
    "react": "^16.4.0",
    "react-dom": "^16.4.0",
    "react-test-renderer": "^16.4.0",
    "sass-loader": "^7.0.1",
    "sinon": "^5.1.0",
    "style-loader": "^0.20.3",
    "webpack": "^4.35.2",
    "webpack-bundle-analyzer": "^3.3.2",
    "webpack-cli": "^3.3.6",
    "webpack-dev-server": "^3.7.2"
  },
  "keywords": [
    "toggle",
    "custom",
    "toggle-button",
    "radiogroup",
    "checkbox",
    "react",
    "switch",
    "toggle-switch",
    "react-component",
    "switchable"
  ],
  "dependencies": {
    "prop-types": "^15.6.0"
  },
  "files": ["dist/index.js", "dist/main.css", "README.md", "main.d.ts"],
  "jest": {
    "verbose": true,
    "collectCoverage": true,
    "coverageDirectory": "./coverage",
    "coveragePathIgnorePatterns": ["./node_modules", "./jest.setup.js"],
    "setupFiles": ["./jest.setup.js"],
    "transform": {
      "^.+\\.(js|jsx|mjs)$": "<rootDir>/node_modules/babel-jest",
      "^.+\\.css$": "<rootDir>/config/jest/cssTransform.js",
      "^(?!.*\\.(js|jsx|mjs|css|json)$)":
        "<rootDir>/config/jest/fileTransform.js"
    }
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es6": true,
      "jest": true
    },
    "extends": ["airbnb", "prettier", "prettier/react"],
    "parser": "babel-eslint",
    "parserOptions": {
      "ecmaFeatures": {
        "jsx": true
      },
      "sourceType": "module"
    },
    "rules": {
      "comma-dangle": ["warn", "never"],
      "no-mixed-operators": "off",
      "object-curly-newline": "off",
      "jsx-a11y/click-events-have-key-events": "off",
      "function-paren-newline": "off"
    }
  }
}
